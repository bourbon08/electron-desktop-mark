{
    "name": "deploy",
    "private": true,
    "version": "0.0.0",
    "description": "Deploys a new version of the app",
    "author": {
        "name": "Chen Hao",
        "email": "1137986780@qq.com"
    },
    "main": "electron/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "build2": "vite build",
        "preview": "vite preview",
        "electron": "wait-on tcp:3000 && electron .",
        "electron:dev": "concurrently -k \"pnpm run dev\" \"pnpm run electron\"",
        "app:build": "vite build && electron-builder"
    },
    "dependencies": {
        "vue": "^3.2.25"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^2.3.1",
        "concurrently": "^7.1.0",
        "electron": "^18.1.0",
        "electron-builder": "^23.0.3",
        "electron-is-dev": "^2.0.0",
        "typescript": "^4.5.4",
        "vite": "^2.9.5",
        "vue-tsc": "^0.34.7",
        "wait-on": "^6.0.1"
    },
    "build": {
        "appId": "com.your-website.your-app",
        "productName": "ElectronApp",
        "copyright": "Copyright Â© 2021 <your-name>",
        "mac": {
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
